@model List<MyWebApp.Models.DiscussionPost>

@{
    ViewData["Title"] = "Community Discussions";
}

<h2 class="text-center my-4">Community Discussions</h2>

<div class="text-end mb-3">
    <a href="/Home/AddDiscussion" class="btn btn-success">Post New Issue</a>
</div>

@if (Model.Count == 0)
{
    <p>No discussions yet.</p>
}
else
{
    foreach (var post in Model)
    {
        <div class="card mb-4 shadow">
            <div class="card-body">
                <h4 class="card-title">@post.Title</h4>
                <p class="card-text">@post.Message</p>
                @if (!string.IsNullOrEmpty(post.ImagePath))
                {
                    <img src="@post.ImagePath" class="img-fluid mb-2" alt="Discussion Image" />
                }
                <small class="text-muted">Posted by @post.UserName on @post.PostedAt.ToString("MMM dd, yyyy hh:mm tt")</small>
            </div>
        </div>
    }
}